{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "types": ["node"],
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "./", // Required for absolute imports
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["src/*"]
    },
  },
  // "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.vitest.json"
    }
  ]
}
